<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tanggal"
    android:background="@drawable/booking_konfirmasi"
    >

    <Button
        android:id="@+id/buttonBooking"
        android:layout_width="122dp"
        android:layout_height="64dp"
        android:text="booking"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.866"
        app:rippleColor="#A67E7E" />

    <!-- Ubah ukuran teks di sini -->


    <TextView
        android:id="@+id/nama"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginStart="196dp"
        android:layout_marginTop="312dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nomor_hp"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginStart="196dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nama" />

    <TextView
        android:id="@+id/menu"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginStart="192dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomor_hp" />

    <TextView
        android:id="@+id/capster"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginStart="192dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu" />

    <TextView
        android:id="@+id/tanggal"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginStart="196dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/capster" />

    <ImageButton
        android:id="@+id/imagebutton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:background="@null"
        android:src="@drawable/backk"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>